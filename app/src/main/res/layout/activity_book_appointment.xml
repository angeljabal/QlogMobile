<?xml version="1.0" encoding="utf-8"?><RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@drawable/gradient"    tools:context=".BookAppointment">    <include        android:id="@+id/toolbarMain"        layout="@layout/toolbar" />    <ImageView        android:id="@+id/logo"        android:layout_width="100sp"        android:layout_height="100sp"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:layout_marginTop="70dp"        app:srcCompat="@drawable/logo" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center"        android:padding="16sp">        <TextView            android:id="@id/purposeTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginHorizontal="12sp"            android:text="Purpose:"            android:textStyle="bold" />        <TextView            android:id="@+id/purposeText"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/purposeTitle"            android:layout_marginBottom="20sp"            android:background="@android:drawable/editbox_background"            android:backgroundTint="#11000000"            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"            android:gravity="center_vertical"            android:hint="Select Purpose"            android:padding="12sp"            android:textColor="@color/white"/>        <TextView            android:id="@id/facilityTitle"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@id/purposeText"            android:layout_marginHorizontal="10sp"            android:text="Facility:"            android:textStyle="bold" />        <TextView            android:id="@+id/facilityText"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_below="@+id/facilityTitle"            android:background="@android:drawable/editbox_background"            android:backgroundTint="#11000000"            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"            android:gravity="center_vertical"            android:hint="Select Facility"            android:padding="12sp"            android:textColor="@color/white" />    </RelativeLayout>    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:layout_gravity="bottom"        android:orientation="horizontal"        android:layout_alignParentRight="true"        android:padding="20sp">        <Button            android:id="@+id/done_btn"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="8dp"            android:layout_weight="0.33"            android:background="@color/teal_400"            android:layout_alignParentRight="true"            android:text="Next"            android:textColor="@android:color/white" />    </LinearLayout></RelativeLayout>